import React, { useRef } from "react";

interface MapContainerProps {
  className?: string;
  children: React.ReactNode;
}

/**
 * A specialized component for map containers
 * Focuses on consistent rendering across all devices
 */
export const MapContainer: React.FC<MapContainerProps> = ({
  className = "",
  children,
}) => {
  const containerRef = useRef<HTMLDivElement>(null);

  return (
    <div
      ref={containerRef}
      className={`map-container ${className}`}
      style={{
        width: "100%",
        height: "100%",
        position: "relative",
      }}
    >
      {children}
    </div>
  );
};
    >
      {children}
    </div>
  );
};
